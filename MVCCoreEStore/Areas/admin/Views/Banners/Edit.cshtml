@model Banner
@{
    var name = "Tanırım Görseli";
    ViewData["Title"] = $"{name} Güncelleme";
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<div class="card card-outline card-success">
    <div class="card-header">
        <h3 class="card-title">@name Güncelleme Formu</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="Image"></label>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="customfile" asp-for="ImageFile">
                            <label class="custom-file-label" for="customfile" data-browse="Gözat">Dosya Seçiniz...</label>
                        </div>
                    </div>
                    <div class="alert alert-info">
                        <ul class="list-unstyled">
                            <li>En iyi görüntü kalitesi için yüklenen görseller 960x340 piksel olmalıdır.</li>
                            <li>Yüklenen görseller otomatik olarak 960x340 piksele getirilecektir.</li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6 text-center">
                    <img id="imgPreview" src="@Model.Image" width="480" height="160" class="border p-2 shadow-sm" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label asp-for="DateStart"></label>
                        <div class="input-group">
                            <input asp-for="DateStart" type="text" class="form-control" readonly />
                            <div class="input-group-append">
                                <button type="button" class="btn btn-outline-secondary" id="dateStartClearBtn">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <span asp-validation-for="DateStart"></span>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label asp-for="DateEnd"></label>
                        <div class="input-group">
                            <input asp-for="DateEnd" type="text" class="form-control" readonly />
                            <div class="input-group-append">
                                <button type="button" class="btn btn-outline-secondary" id="dateEndClearBtn">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <span asp-validation-for="DateEnd"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="Url"></label>
                        <input asp-for="Url" type="url" class="form-control" placeholder="Url yazınız... " />
                        <span asp-validation-for="Url"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" accept="image/*" id="customCheckEnabled" asp-for="Enabled">
                            <label class="custom-control-label" for="customCheckEnabled">Aktif</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <a class="btn btn-link" asp-action="Index">İptal</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Kaydet
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
        $(() => {

            $('#DateStart').datepicker($.datepicker.regional["tr"]);
            $('#DateEnd').datepicker($.datepicker.regional["tr"]);

            $('#customfile').change(function () {
                var reader = new FileReader();
                reader.onloadend = function (ev) {
                    $('#imgPreview').attr('src', reader.result);
                };
                reader.readAsDataURL(this.files[0]);
            });

            $.datepicker.regional['tr'] = {
                closeText: 'kapat',
                prevText: '&#x3c;geri',
                nextText: 'ileri&#x3e',
                currentText: 'bugün',
                monthNames: ['Ocak', 'Şubat', 'Mart', 'Nisan', 'Mayıs', 'Haziran',
                    'Temmuz', 'Ağustos', 'Eylül', 'Ekim', 'Kasım', 'Aralık'],
                monthNamesShort: ['Oca', 'Şub', 'Mar', 'Nis', 'May', 'Haz',
                    'Tem', 'Ağu', 'Eyl', 'Eki', 'Kas', 'Ara'],
                dayNames: ['Pazar', 'Pazartesi', 'Salı', 'Çarşamba', 'Perşembe', 'Cuma', 'Cumartesi'],
                dayNamesShort: ['Pz', 'Pt', 'Sa', 'Ça', 'Pe', 'Cu', 'Ct'],
                dayNamesMin: ['Pz', 'Pt', 'Sa', 'Ça', 'Pe', 'Cu', 'Ct'],
                weekHeader: 'Hf',
                dateFormat: 'dd.mm.yy',
                firstDay: 1,
                isRTL: false,
                showMonthAfterYear: false,
                yearSuffix: ''
            };
            $.datepicker.setDefaults($.datepicker.regional['tr']);

            $('#DateStart').datepicker()
            $('#DateEnd').datepicker();

            $('#dateStartClearBtn').on('click', () => {
                $('#DateStart').val('');
            });
            $('#dateEndClearBtn').on('click', () => {
                $('#DateEnd').val('');
            });

        })
    </script>
}